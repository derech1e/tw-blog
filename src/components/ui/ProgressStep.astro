---
// src/components/ui/ProgressStep.astro
interface Props {
    step: number;
    total: number;
    title?: string;
}
const { step, total, title } = Astro.props;
const pct = Math.max(0, Math.min(100, Math.round((step / total) * 100)));
---

<div class="not-prose my-6 rounded-xl border border-slate-200 p-4">
    <div class="flex items-center justify-between gap-4">
        <div class="text-sm font-medium text-slate-700">
            {title ?? `Step ${step} of ${total}`}
        </div>
        <div class="text-xs text-slate-500">{pct}%</div>
    </div>
    <div class="mt-2 h-2 w-full overflow-hidden rounded-full bg-slate-100">
        <div
                class="h-full bg-gradient-to-r from-sky-400 to-violet-500"
                style={`width:${pct}%`}
        />
    </div>
</div>
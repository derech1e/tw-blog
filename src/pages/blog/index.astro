---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).filter(blog => !blog.data.hidden).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
				position: relative; /* Needed for the absolute positioned shimmer */
				overflow: hidden; /* Ensures the shimmer stays within the card */
				z-index: 1; /* Ensures content is above the shimmer */
			}

			ul li a::before {
				content: "";
				position: absolute;
				top: 0;
				left: -100%; /* Start the shimmer off-screen to the left */
				width: 100%;
				height: 100%;
				background: linear-gradient(
					90deg,
					transparent,
					rgba(255, 255, 255, 0.3), /* Shimmer color */
					transparent
				);
				transition: left 0.5s ease-in-out; /* Smooth transition for shimmer */
				transform: skewX(-20deg); /* Tilt the shimmer for a more dynamic look */
				pointer-events: none; /* Allows clicks to pass through */
				z-index: 3; /* Ensures shimmer is above image and text */
			}

			ul li a:hover::before {
				left: 100%; /* Move the shimmer across the card on hover */
			}

			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
				position: relative; /* Needed for shimmer overlay */
				z-index: 2; /* Ensures text and image are above the shimmer */
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt=""
											   transition:name={`hero-${post.id}`} />
									)}
									<h4 class="title" transition:name={`title-${post.id}`}>{post.data.title}</h4>
									<p class="date" transition:name={`date-${post.id}`}>
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
<footer>
	<script async src="//www.instagram.com/embed.js"></script>
</footer>
</html>

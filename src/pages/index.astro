---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const greetings = [
    { emoji: "🧑‍🚀", phrase: "Weltveränderer" },
    { emoji: "🧑‍💻", phrase: "Magier" },
    { emoji: "🧑‍🎨", phrase: "Kreative Seele" },
    { emoji: "🧑‍🔬", phrase: "Innovator" },
    { emoji: "🧑‍🍳", phrase: "Freudebringer" },
    { emoji: "🧑‍🏫", phrase: "Wissenssucher" },
    { emoji: "🧑‍🚒", phrase: "Held" },
    { emoji: "🧑‍⚕️", phrase: "Lebensretter" },
    { emoji: "🧑‍✈️", phrase: "Träumender" },
    { emoji: "🧑‍🌾", phrase: "Wachstumsbringer" }
];

const randomIndex = Math.floor(Math.random() * greetings.length);
const { emoji, phrase } = greetings[randomIndex];
export const prerender = false;
---

<!doctype html>
<html lang="de">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
        .fade-in {
            opacity: 0;
            animation: fadeIn 0.5s ease-in-out forwards;
        }
        @keyframes fadeIn {
            to {
                opacity: 1;
            }
        }
        .wave {
            display: inline-block;
            animation: wave 1.8s infinite;
            transform-origin: 70% 70%;
        }
        @keyframes wave {
            0%, 60%, 100% { transform: rotate(0deg); }
            10%, 30% { transform: rotate(18deg); }
            20% { transform: rotate(-8deg); }
            40% { transform: rotate(4deg); }
            50% { transform: rotate(-4deg); }
        }
        .highlight {
            background: linear-gradient(90deg, #ffe082 40%, #ffd54f 100%);
            border-radius: 0.4em;
            padding: 0.1em 0.4em;
            font-weight: 500;
        }
    </style>
</head>
<body>
<Header />
<main>
    <h1>{emoji} Hallo, {phrase}!</h1>
    <div class="fade-in" style="animation-delay:0.2s; animation-fill-mode:both;">
        <p class="fade-in">
            <span class="wave" aria-label="Winken">👋</span>
            Schön, dass du hier bist!
        </p>
        <p>
            <span>Willkommen auf meinem Blog</span> über mein Auslandssemester in <b>Taiwan 2025/2026</b>!
            Ich werde an der <a href="https://nthu-en.site.nthu.edu.tw/" target="_blank" rel="noopener">National Tsing Hua University (NTHU)</a> in Hsinchu <b>Informatik</b> studieren.
        </p>
        <p>
            Hier möchte ich einige Einblicke in das Leben und Studieren in Taiwan, von <b>Abenteuern</b> über <b>kulturelle Entdeckungen</b> bis hin zu meinem <b>Uni-Alltag</b> geben.
        </p>
        <p>
            Du möchtest mehr über mich erfahren? Dann schau gerne auf meiner <a href="/about">Über mich</a> Seite vorbei!
        </p>
        <p>
            Ob ich ein guter Autor bin? Naja, dass wird die Zukunft zeigen. <br>
            Viel Spaß beim Lesen und Mitreisen!
        </p>
    </div>
</main>
<Footer />
</body>
</html>